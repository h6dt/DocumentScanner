<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/line_top"
    android:paddingBottom="8dp"
    android:paddingTop="16dp"
    >
    <TextView android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Scanned Documents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/number"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:maxLines="1"
        android:textStyle="bold"
        android:ellipsize="end"
        android:textColor="@color/scanner_text_color"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:fontFamily="@font/helvetica_font"
        android:shadowRadius="14"
        android:shadowColor="#11111111"
        android:shadowDx="5"
        android:shadowDy="14"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:minWidth="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        tools:text="0"
        android:singleLine="true"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center"
        android:textColor="@color/flatOrange"
        android:background="@drawable/count_round_drawable"/>
</androidx.constraintlayout.widget.ConstraintLayout>