<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@id/main_nav_image"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/ic_nav_camera_trap"/>
    <TextView
        android:id="@id/main_nav_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        tools:text="Camera"
        app:layout_constraintStart_toStartOf="@id/main_nav_image"
        app:layout_constraintEnd_toEndOf="@id/main_nav_image"
        app:layout_constraintTop_toBottomOf="@id/main_nav_image"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>