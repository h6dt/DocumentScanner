<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    tools:background="@android:color/black"
    tools:context="com.tdh7.documentscanner.ui.scansession.WorkingSessionFragment">
    <View
        android:id="@+id/status_bar"
        android:layout_width="0dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@android:color/black"
        tools:cardBackgroundColor="#111"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        tools:scaleX="0.8"
        tools:scaleY="0.8"
        tools:translationY="0dp">
        <com.tdh7.documentscanner.controller.filter.FilterImageView
            android:id="@+id/filter_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:bitmapSrc="@drawable/brand"
            app:filter="quickView"
            app:filterClass="com.tdh7.documentscanner.controller.filter.canvas.QuickViewCanvasFilter"
            app:filterParameter="90"
            tools:drawBitmapIfNoFilter="false"
            />
        <com.tdh7.documentscanner.ui.widget.MarkerView
            android:id="@+id/markerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_gradient_crop_edge_quick_view_reverse"
        android:elevation="1dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/button_one"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/keep_scan"
        android:textColor="@color/flatOrange"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@id/button_two"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/circle_background_white"
        android:layout_marginEnd="8dp"
        app:elevation="2dp"/>
    <TextView
        android:id="@+id/button_two"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="@id/button_one"
        app:layout_constraintBottom_toBottomOf="@id/button_one"
        app:layout_constraintStart_toEndOf="@id/button_one"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/circle_background_white_border"
        android:text="@string/continue_"
        android:textColor="@color/flatOrange"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:textStyle="bold"
        android:textSize="14sp"
        app:elevation="2dp"
        android:layout_marginEnd="16dp"
        android:focusable="true"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/page_note"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/back_button"
        app:layout_constraintBottom_toBottomOf="@id/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Page (1)"
        android:textColor="#444"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12sp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:elevation="2dp"
        android:background="@drawable/background_toast_for_camera"
        android:focusable="true"
        android:clickable="true"
        />
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:padding="9dp"
        app:layout_constraintStart_toStartOf="@id/card_view"
        app:layout_constraintTop_toBottomOf="@id/status_bar"
        android:elevation="4dp" />
</androidx.constraintlayout.widget.ConstraintLayout>