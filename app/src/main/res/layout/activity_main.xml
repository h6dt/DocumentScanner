<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="us.nvb.documentscanner.MainActivity">
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <View
            android:id="@+id/app_bar"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_app_bar"/>
        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:layout_constraintTop_toTopOf="@id/app_bar"
            app:layout_constraintBottom_toBottomOf="@id/app_bar"
            app:layout_constraintStart_toStartOf="@id/app_bar"
            app:srcCompat="@drawable/ic_menu_24dp"
            android:tint="#626262"
            android:layout_marginStart="10dp"
            android:background="@drawable/ripple_transparent_50dp"
            android:padding="9dp" />
        <ImageView
            android:id="@+id/camera_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="@id/app_bar"
            app:layout_constraintBottom_toBottomOf="@id/app_bar"
            app:layout_constraintEnd_toEndOf="@id/app_bar"
            app:srcCompat="@drawable/ic_photo_camera_black_24dp"
            android:background="@drawable/ripple_transparent_50dp"
            android:tint="#626262"
            android:layout_marginEnd="8dp"
            android:padding="11dp"
            android:alpha="0"
            android:scaleX="0"
            android:scaleY="0"
            tools:alpha="1"
            tools:scaleX="1"
            tools:scaleY="1"/>
        <ImageView
            android:id="@+id/add_image_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="@id/app_bar"
            app:layout_constraintBottom_toBottomOf="@id/app_bar"
            app:layout_constraintEnd_toStartOf="@id/camera_icon"
            app:srcCompat="@drawable/add_image"
            android:tint="#626262"
            android:padding="11dp"
            android:alpha="0"
            android:scaleX="0"
            android:scaleY="0"
            tools:alpha="1"
            tools:scaleX="1"
            tools:scaleY="1"
            android:background="@drawable/ripple_transparent_50dp"/>
        <TextView
            android:id="@+id/search_hint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/helvetica_font"
            android:textSize="17sp"
            android:textColor="#8A8A8A"
            android:paddingTop="3dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="6dp"
            android:text="Search your documents"
            android:alpha="0"
            tools:alpha="1"
            tools:scaleX="1"
            tools:scaleY="1"
            app:layout_constraintStart_toEndOf="@id/menu_icon"
            app:layout_constraintEnd_toStartOf="@id/add_image_icon"
            app:layout_constraintTop_toTopOf="@id/app_bar"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="@id/app_bar"
            />
        <ImageView
            android:id="@+id/app_icon"
            android:layout_height="45dp"
            android:layout_width="25dp"
            app:layout_constraintTop_toTopOf="@id/app_title"
            app:layout_constraintBottom_toBottomOf="@id/app_title"
            app:layout_constraintStart_toStartOf="@id/app_bar"
            android:src="@drawable/scan_stock_96"
            android:paddingTop="10dp"
            android:tint="@color/scanner_theme_color"
            android:paddingBottom="10dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@id/app_title"
            app:layout_constraintHorizontal_chainStyle="packed"
            tools:visibility="gone"/>
        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:fontFamily="@font/helvetica_font"
            android:textSize="15sp"
            android:textColor="@color/scanner_text_color"
            android:text="Scanner"
            android:textStyle="bold"
            android:paddingTop="4dp"
            app:layout_constraintStart_toEndOf="@id/app_icon"
            app:layout_constraintEnd_toEndOf="@id/app_bar"
            app:layout_constraintTop_toTopOf="@id/app_bar"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/app_bar"
            tools:visibility="gone"
            />
        <TextView
            android:id="@+id/header_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="24dp"
            android:textSize="20sp"
            android:fontFamily="@font/helvetica_font"
            android:textColor="#666"
            android:textStyle="bold"
            android:text="Danh sách tài liệu"
            app:layout_constraintTop_toBottomOf="@id/app_bar"
            />
        <TextView
            android:id="@+id/empty_list_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="8dp"
            android:textColor="#666"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/header_list"
            app:layout_constraintEnd_toEndOf="@id/header_list"
            android:text="Danh sách trống\nNhấn nút bên dưới để quét tài liệu mới"
            app:layout_constraintTop_toBottomOf="@id/header_list"/>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:choiceMode="singleChoice"
            android:layout_margin="10dp"
            android:paddingBottom="61dp"
            app:layout_constraintTop_toBottomOf="@id/empty_list_view"
            app:layout_constraintBottom_toBottomOf="parent"/>
 <!--       <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="32dp"
            app:srcCompat="@drawable/ic_add_24dp"
            app:fabCustomSize="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>
<com.google.android.material.navigation.NavigationView
    android:id="@+id/navigation_menu"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/navigation_header"
    android:background="@android:color/white"
    />
</androidx.drawerlayout.widget.DrawerLayout>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@android:color/white"
        tools:visibility="gone"/>
</FrameLayout>
